{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "MM - Web Infrastructure",
  "Parameters": {
    "PRoute53HostedZone": {
      "Type": "String",
      "Description": "The hosted Zone Address to use for Route 53 deployment",
      "Default": "sivashub.com"
    },
    "PRoute53RegionHostedZoneId": {
      "Type": "String",
      "Description": "The hosted Zone Canonical ID of us-east region",
      "Default": "Z3AQBSTGFYJSTF"
    },
    "PRoute53DomainHostedZoneId": {
      "Type": "String",
      "Description": "The hosted Zone Canonical ID of the target hosted Zone",
      "Default": "Z3AQBSTGFYJSTF"
    },
    "PRoute53SubDomainPrefix": {
      "Type": "String",
      "Description": "SubDomain to use when creatring A Record for DNS mapping to website",
      "Default": "mm.ng2"
    }
  },
  "Resources": {
    "RS3NakedSubDomainBucket": {
      "Type": "AWS::S3::Bucket",
      "Properties": {
        "BucketName": {
          "Fn::Join": [
            "",
            [
              {
                "Ref": "PRoute53SubDomainPrefix"
              },
              ".",
              {
                "Ref": "PRoute53HostedZone"
              }
            ]
          ]
        },
        "AccessControl": "PublicRead",
        "WebsiteConfiguration": {
          "IndexDocument": "index.html",
          "ErrorDocument": "site-error.html"
        }
      }
    },
    "RS3WWWSubDomainBucket": {
      "Type": "AWS::S3::Bucket",
      "DependsOn": [
        "RS3NakedSubDomainBucket"
      ],
      "Properties": {
        "BucketName": {
          "Fn::Join": [
            "",
            [
              "www",
              ".",
              {
                "Ref": "PRoute53SubDomainPrefix"
              },
              ".",
              {
                "Ref": "PRoute53HostedZone"
              }
            ]
          ]
        },
        "AccessControl": "PublicRead",
        "WebsiteConfiguration": {
          "RedirectAllRequestsTo": {
            "HostName": {
              "Fn::Join": [
                "",
                [
                  {
                    "Ref": "PRoute53SubDomainPrefix"
                  },
                  ".",
                  {
                    "Ref": "PRoute53HostedZone"
                  }
                ]
              ]
            }
          }
        }
      }
    },
    "RRoute53NakedSubDomainARecordGroup": {
      "Type": "AWS::Route53::RecordSetGroup",
      "DependsOn": [
        "RS3NakedSubDomainBucket",
        "RS3WWWSubDomainBucket"
      ],
      "Properties": {
        "HostedZoneId": {
          "Ref": "PRoute53DomainHostedZoneId"
        },
        "RecordSets": [
          {
            "Name": {
              "Fn::Join": [
                "",
                [
                  {
                    "Ref": "PRoute53SubDomainPrefix"
                  },
                  ".",
                  {
                    "Ref": "PRoute53HostedZone"
                  }
                ]
              ]
            },
            "Type": "A",
            "AliasTarget": {
              "DNSName": "s3-website-us-east-1.amazonaws.com",
              "HostedZoneId": {
                "Ref": "PRoute53RegionHostedZoneId"
              }
            }
          },
          {
            "Name": {
              "Fn::Join": [
                "",
                [
                  "www.",
                  {
                    "Ref": "PRoute53SubDomainPrefix"
                  },
                  ".",
                  {
                    "Ref": "PRoute53HostedZone"
                  }
                ]
              ]
            },
            "Type": "A",
            "AliasTarget": {
              "DNSName": "s3-website-us-east-1.amazonaws.com",
              "HostedZoneId": {
                "Ref": "PRoute53RegionHostedZoneId"
              }
            }
          }
        ]
      }
    }
  },
  "Outputs": {
    "S3NakedSubDomainUrl":{
      "Value": {
        "Fn::GetAtt" : [ "RS3NakedSubDomainBucket", "WebsiteURL" ]
      }
    },
    "S3WWWSubDomainUrl":{
      "Value": {
        "Fn::GetAtt" : [ "RS3WWWSubDomainBucket", "WebsiteURL" ]
      }
    },
    "Route52NakedSubDomainUrl":{
      "Value": {
        "Fn::Join": ["", [
          {"Ref": "PRoute53SubDomainPrefix"},
          ".",
          {"Ref": "PRoute53HostedZone"}
        ]]
      }
    },
    "Route52WWWSubDomainUrl":{
      "Value": {
        "Fn::Join": ["", [
          "www",
          ".",
          {"Ref": "PRoute53SubDomainPrefix"},
          ".",
          {"Ref": "PRoute53HostedZone"}
        ]]
      }
    }
  }
}